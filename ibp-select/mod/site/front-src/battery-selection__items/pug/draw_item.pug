mixin draw_item()
  .container-items__item
    .container-items__card
      .container-items__img
        .container-items__img__box
          img(src="img/battery-selection__items/bitmap_2.png")
      .container-items__description
        div
          a.container-items__name Irbis BLP12-24
        ul
          li
            div
              span Ёмкость
            div
              span 18Ач
          li
            div
              span Напряжение
            div
              span 12В
          li
            div
              span Габариты
            div
              span 151 x 98 x 94 мм
          li
            div
              span Гарантия
            div
              span 12 месяцев
        .additional
          .additional__btn
            span Модульная батарея 
            span (2 модуля)
          .container-items__help
            .container-items__help__box
              .container-items__help__close
